<p style="color: green"><%= notice %></p>
<div class="d-flex justify-content-between">
  <h3 class="m-4" style="color: rgb(72, 72, 116);">
    <%= link_to raw("<i class='bi-arrow-left-circle backIcon'></i>"), contacts_path %>
    Details of <%= @contact.fname %> <%= @contact.lname %>
  </h3>
  <div>
    <button type="button" data-bs-toggle="modal" data-bs-target="#confirmationModal" class="btn border">
      <i class="bi-trash backIcon"></i>
    </button>
    <%= link_to raw("<i class=\"bi-pen backIcon m-4 btn border\"></i>"), edit_contact_path(@contact)%>
  </div>
</div>

 <fieldset id="contacts" data-controller="region">
    <table class="table table-striped">
      <tbody>
        <tr>
          <th class="header">First name</th>
          <td> <%= @contact.fname %>  </td>
        </tr>
        <tr>
          <th class="header">Last name</th>
          <td> <%= @contact.lname %>  </td>
        </tr>
        <tr>
          <th class="header">Phone number</th>
          <td> <%= @contact.phone %> </td>
        </tr>
        <tr>
          <th class="header">Email</th>
          <td> <%= @contact.email %> </td>
        </tr>
        <tr>
          <th class="header">Date of birth</th>
          <td> <%= @contact.birth_date %> </td>
        </tr>
        <tr>
          <th class="header">Region</th>
          <td> <%= @contact.suburb.city.region.name %> </td>
        </tr>
        <tr>
          <th class="header">City</th>
          <td> <%= @contact.suburb.city.name %> </td>
        </tr>
        <tr>
          <th class="header">Suburb</th>
          <td> <%= @contact.suburb.name %> </td>
        </tr>
      </tbody>
    </table>
  </fieldset>

<div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog"> 
      <div class="modal-content">                      
        <div class="modal-header header"> 
          <h3>Confirmation</h3>
        </div>                      
        <div class="modal-body"> 
        <%#= render "contacts/menu", contact: contact %>
        <div> Do you want to delete this contact? </div>                       
        </div>                      
        <div class="modal-footer">                 
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <%= button_to raw("<i class=\"bi-trash\"></i> Delete"),  @contact, class: "btn btn-danger", method: :delete%>
      </div>
    </div>
  </div>
</div> 
