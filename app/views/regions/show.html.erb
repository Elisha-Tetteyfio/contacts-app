<p style="color: green"><%= notice %></p>
<div class="d-flex justify-content-between">
  <h3 class="m-4" style="color: rgb(72, 72, 116);">
    <%= link_to raw("<i class='bi-arrow-left-circle backIcon'></i>"), regions_path %>
    Details of <%= @region.name %>
  </h3>
  <div>
    <button type="button" data-bs-toggle="modal" data-bs-target="#confirmationModal" class="btn border">
      <i class="bi-trash backIcon"></i>
    </button>
    <%= link_to raw("<i class=\"bi-pen backIcon m-4 btn border\"></i>"), edit_region_path(@region)%>
  </div>
</div>

 <fieldset id="contacts" data-controller="region">
    <table class="table table-striped">
      <tbody>
        <tr>
          <th class="header">Region</th>
          <td> <%= @region.name %>  </td>
        </tr>
        <tr>
          <th class="header">Remark</th>
          <td> <%= @region.remark %>  </td>
        </tr>
        <tr>
          <th class="header">Added by</th>
          <td> <%= @region.user.fname %> <%= @region.user.lname %> </td>
        </tr>
        <tr>
          <th class="header">Cities</th>
          <td>
          <% @cities.each do |city| %>
            <div><%= city.name %></div>
          <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </fieldset>

<div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog"> 
      <div class="modal-content">                      
        <div class="modal-header header"> 
          <h3>Confirmation</h3>
        </div>                      
        <div class="modal-body"> 
        <div> Do you want to delete this region? </div>                       
        </div>                      
        <div class="modal-footer">                 
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <%= button_to raw("<i class=\"bi-trash\"></i> Delete"),  @region, class: "btn btn-danger", method: :delete%>
      </div>
    </div>
  </div>
</div> 
